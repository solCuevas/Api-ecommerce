<h1>Carrito</h1>

<ul>
  {{#each cart.products}}
    <li>
      {{this.product.title}} - Cantidad: {{this.quantity}}
      <form action="/api/carts/{{../cart._id}}/products/{{this.product._id}}" method="put" style="display:inline;">
        <input type="number" name="quantity" value="{{this.quantity}}" min="1">
        <button type="submit">Actualizar</button>
      </form>
      <form action="/api/carts/{{../cart._id}}/products/{{this.product._id}}" method="delete" style="display:inline;">
        <button type="submit">Eliminar</button>
      </form>
    </li>
  {{/each}}
</ul>

<form action="/api/carts/{{cart._id}}" method="delete">
  <button type="submit">Vaciar carrito</button>
</form>
